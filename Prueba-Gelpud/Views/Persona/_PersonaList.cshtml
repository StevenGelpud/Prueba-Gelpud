@model IEnumerable<Prueba_Gelpud.Models.Persona>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Identificación</th>
            <th>Género</th>
            <th>Fecha de Nacimiento</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="persona-@item.IdPersona">
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.Identificacion</td>
                <td>@item.Genero</td>
                <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td>
                    <button class="btn btn-warning edit-btn" data-id="@item.IdPersona">Editar</button>
                    <button class="btn btn-danger delete-btn" data-id="@item.IdPersona">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

