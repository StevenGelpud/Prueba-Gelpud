@{
    ViewData["Title"] = "Lista de Personas";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <!-- Aquí se mostrarán las personas de manera dinámica -->
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Identificación</th>
                <th>Género</th>
                <th>Fecha de Nacimiento</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="scripts-list">
            <!-- Se llenará dinámicamente mediante AJAX -->
        </tbody>
    </table>

    <!-- Botón para mostrar el formulario de creación -->
    <button class="btn btn-primary" id="createPersonaBtn">Crear Persona</button>
</div>

<!-- Modal para Crear/Editar Persona -->
<div class="modal" tabindex="-1" role="dialog" id="personaModal">
    <!-- Contenido del modal va aquí (campo para agregar datos) -->
</div>

<!-- Archivos JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Aquí se llama al archivo JS para manejar AJAX -->
<script src="~/js/scripts.js"></script>
